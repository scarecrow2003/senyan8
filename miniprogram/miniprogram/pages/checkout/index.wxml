<navigation-bar title="浠" back="{{true}}}" color="black" background="#FFF"></navigation-bar>
<view class="checkout-page">
  <block wx:if="{{cart.length > 0}}">
    <view class="summary">
      <view class="invoice">璁㈠风: {{invoice}}</view>
      <block wx:for="{{cart}}" wx:key="id">
        <view class="item-row">
          <text class="item-name">{{item.name}}</text>
          <text class="item-qty">x{{item.quantity}}</text>
          <text class="item-price">S${{item.price * item.quantity}}</text>
        </view>
      </block>
      <view class="total-row">
        <text class="total-label">讳环:</text>
        <text class="total-price">S${{totalPrice}}</text>
      </view>
    </view>
    <view class="paynow-section">
      <text class="qr-title">璇风PayNow浠</text>
      <view>
        <canvas canvas-id="paynowQrcode" class="qr-code"></canvas>
      </view>
      <text class="qr-note">璇风ㄦㄧ惰App浠</text>
      <block wx:if="{{qrcodeSaved}}">
        <button class="confirm-btn" bindtap="confirmPayment">纭瀹</button>
      </block>
      <block wx:else>
        <button class="save-btn" bindtap="saveQrcode">瑰讳瀛浜缁寸版</button>
      </block>
    </view>
  </block>

  <block wx:else>
    <view class="empty">Cart is empty. Please add some flowers </view>
  </block>
</view>